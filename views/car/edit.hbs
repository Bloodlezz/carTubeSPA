{{> navigation}}
<div id="edit-listing">
    <form method="POST" action="#/car/edit/{{carData._id}}">
        <div class="container">
            <h1>Edit Car Listing</h1>
            <p>Please fill in this form to edit an listing.</p>
            <hr>
            <input type="hidden" name="_id" value="{{carData._id}}"/>

            <p>Title</p>
            <input type="text" placeholder="Enter Title" name="title" value="{{carData.title}}">

            <p>Description</p>
            <input type="text" placeholder="Enter Description" name="description" value="{{carData.description}}">

            <p>Car Brand</p>
            <input type="text" placeholder="Enter Car Brand" name="brand" value="{{carData.brand}}">

            <p>Car Model</p>
            <input type="text" placeholder="Enter Car Model" name="model" value="{{carData.model}}">

            <p>Car Year</p>
            <input type="number" placeholder="Enter Car Year" name="year" value="{{carData.year}}">

            <p>Car Image</p>
            <input type="text" placeholder="Enter Car Image" name="imageUrl" value="{{carData.imageUrl}}">

            <p>Car Fuel Type</p>
            <input type="text" placeholder="Enter Car Fuel Type" name="fuelType" value="{{carData.fuelType}}">

            <p>Car Price</p>
            <input type="number" placeholder="Enter Car Price" name="price" value="{{carData.price}}">

            <hr>
            <button type="submit" class="registerbtn">Edit Listing</button>
        </div>
    </form>
</div>
{{> footer}}